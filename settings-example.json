{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-bootstrap.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/worktree-cleanup.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/after-edit.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/cfn-lint-check.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/state-index-update.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/blueprint-stage-gate.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/empirica-commit-reminder.sh"
          }
        ]
      },
      {
        "matcher": "Read|Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/insight-nudge.sh"
          }
        ]
      },
      {
        "matcher": "mcp__empirica__finding_log|mcp__empirica__mistake_log|mcp__empirica__deadend_log",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/empirica-insight-capture.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/dangerous-commands.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/secret-scanner.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/protect-claude-md.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/tdd-guardian.sh"
          }
        ]
      },
      {
        "matcher": "mcp__empirica__session_create",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/empirica-session-guard.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-end-empirica.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/session-end-vault.sh"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "obsidian": {
      "command": "node",
      "args": [
        "{HOME}/.local/share/mcp-servers/obsidian-mcp/dist/index.js"
      ],
      "env": {
        "OBSIDIAN_VAULT_PATH": "/path/to/your/obsidian/vault"
      }
    }
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/hooks/statusline.sh"
  }
}
